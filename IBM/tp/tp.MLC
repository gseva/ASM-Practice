TSOEDIT  SUBENTRY BASES=(3,4,5,6)
         BAL      12,LEERARCH
         BAL      12,MOSTRAR
ENTRADA  MVC      COMANDO(1),=C' '   * Limpio el comando
         MVC      COMANDO+1(55),COMANDO
         WTOR     'Comandos: C/CHANGE, N/NEXT, Q',COMANDO,,WAITECB
         WAIT     ECB=WAITECB
         BAL      12,PARSEAR
         CLC      ESVALIDO,=C'N'
         BE       ERROR
         BAL      12,EJECUTAR
         B        ENTRADA

ERROR    MVC      LINEA,MSGINVAL
         BAL      13,WTOROT
         B        ENTRADA

SALIR    MVC      LINEA,MSGSALID
         BAL      13,WTOROT
	      SUBEXIT


* Rutina de lectura del archivo inicial *
LEERARCH OPEN     (ARCHIN,(INPUT))
         LA       7,TEXTOIN
LEER     GET      ARCHIN,LINEA
         MVC      0(80,7),LINEA
         LA       7,80(7)
         B        LEER
EOF      MVC      0(1,7),=X'00'
         CLOSE    ARCHIN
         BR       12

* Rutina de validacion y parseo del comando *
PARSEAR  CLI      INICIAL,C'Q'
         BE       SALIR
         CLC      COMANDO(2),=C'C '
         BE       PARSECNG
         CLC      COMANDO(6),=C'CHANGE '
         BNE      VALN
         MVC      COMANDO+1(50),COMANDO+6  * CHANGE '..' -> C '..'
         B        PARSECNG
VALN     CLI      INICIAL,C'N'
         BE       PARSENXT
         CLC      COMANDO(5),=C'NEXT '
         BE       PARSENXT
INVAL    MVI      ESVALIDO,C'N'
         BR       12
VALIDO   MVI      ESVALIDO,C'S'
         BR       12

PARSENXT CLI      PARSEADO,C'S'
         BNE      INVAL
         B        VALIDO

* Subrutina que parsea el comando CHANGE, guarda las palabras pasadas *
* en rotulos ANTES y DESPUES. Checkea el formato. Acepta un maximo de *
* 20 caracteres por cada parametro. *
PARSECNG CLI      PARSEADO,C'S'
         BE       INVAL
         CLC      COMANDO+1(2),=X'407D'  * X'407D' == C' \''
         BNE      INVAL
         LA       8,20
         LA       9,ANTES
         LA       7,COMANDO+3
LOOPANTS CLC      0(1,7),=X'7D'
         BE       FINANTS
         MVC      0(1,9),0(7)
         LA       7,1(7)
         LA       9,1(9)
         BCT      8,LOOPANTS
         B        INVAL
FINANTS  MVC      0(1,9),=X'00'
         CLC      1(2,7),=X'407D'
         BNE      INVAL
         LA       7,3(7)
         LA       8,20
         LA       9,DESPUES
LOOPDSPS CLC      0(1,7),=X'7D'
         BE       FINDSPS
         MVC      0(1,9),0(7)
         LA       7,1(7)
         LA       9,1(9)
         BCT      8,LOOPDSPS
         B        INVAL
FINDSPS  MVC      0(1,9),=X'00'
         MVI      PARSEADO,C'S'
         MVC      LINEA,ANTES
         BAL      13,WTOROT
         BAL      13,AMAYUS
         MVC      LINEA,DESPUES
         BAL      13,WTOROT
         B        VALIDO

* Rutina que muestra el texto *
MOSTRAR  LA       7,TEXTOIN
MOSTLOOP MVC      LINEA(1),=C' '
         MVC      LINEA+1(79),LINEA
         LA       9,LINEA
         LA       8,80
MOSTLNEA MVC      0(1,9),0(7)
         CLC      0(1,7),=X'00'
         BE       MOSTSAL
         LA       7,1(7)
         LA       9,1(9)
         BCT      8,MOSTLNEA
         BAL      13,WTOROT
         B        MOSTLOOP
MOSTSAL  BAL      13,WTOROT
         BR       12

* Rutina que convierte DESPUES a mayuscula *
AMAYUS   LA       7,DESPUES
         LA       8,20
AMAYLOOP CLI      0(7),X'81'
         BL       AMAYSGTE
         CLI      0(7),X'A9'
         BH       AMAYSGTE
         LA       10,0
         IC       10,0(7)
         A        10,=F'64'
         STC      10,0(7)
AMAYSGTE LA       7,1(7)
         BCT      8,AMAYLOOP
         BR       13


* Rutina que ejecuta el comando *
EJECUTAR LA       7,TEXTOIN
         LA       9,DESPUES

         BR       12


* Rutina que muestra una linea en pantalla *
WTOROT   MVC      SALIDA,ESPACIOS
         MVC      SALIDA,LINEA
         WTO      MF=(E,WTOBLOCK)
         BR       13



* Declaracion de variables *
COMANDO  DS       0CL56   * Comando hasta 56 caracteres
INICIAL  DS       1C
RESTO    DS       59C

PARSEADO DS       C
ESVALIDO DS       C

LINEA    DS       CL80    * Linea de texto
ESPACIOS DS       CL80' '
MSGINVAL DC       C'Comando invalido',X'00'
MSGSALID DC       C'Muchas gracias, vuelva pronto',X'00'

TEXTOIN  DS       60CL80
TEXTOOUT DS       60CL80

ANTES    DS       20C
DESPUES  DS       20C

CHAR     DS       C

* Archivo de entrada *
ARCHIN   DCB      DSNAME=ARCHIVO,LRECL=80,RECFM=FT,MACRF=GM,EODAD=EOF
ARCHIVO  DC       C'saraza',X'00'

WAITECB  DS       F
WTOBLOCK DC       H'84'
         DC       H'0'
SALIDA   DS       CL80

	      END
